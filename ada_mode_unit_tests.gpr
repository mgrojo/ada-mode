with "standard_common";
with "ada_mode_wisi_parse";
with "wisitoken_test";
project Ada_Mode_Unit_Tests is

   for Main use ("test_harness.adb");

   for Source_Dirs use ("unit_test");
   for Object_Dir use "obj";

   for Languages use ("Ada");

   package Compiler is

      case Standard_Common.Build is
      when "Debug" =>
         for Default_Switches ("Ada") use
           Standard_Common.Compiler.Common_Switches &
           Standard_Common.Compiler.Style_Checks &
           Standard_Common.Compiler.Debug_Switches;

      when "Normal" =>
         for Default_Switches ("Ada") use
           Standard_Common.Compiler.Common_Switches &
           Standard_Common.Compiler.Style_Checks &
           Standard_Common.Compiler.Release_Switches;

      end case;

   end Compiler;

   package Builder is
      for Default_Switches ("Ada") use Standard_Common.Builder'Default_Switches ("Ada");

      --  We use ".exe" extension even on non-Windows, to simplify the makefiles.
      for Executable_Suffix use ".exe";
   end Builder;

   package Binder is
      for Default_Switches ("Ada") use ("-E"); -- symbolic traceback
   end Binder;

end Ada_Mode_Unit_Tests;
