--  For running OpenToken tests.
--  use installed AdaCore aunit (not SAL aunit; don't put SAL in project path)
--
--  (ediff "opentoken_test.gpr" "../release/opentoken_test.gpr")

with "../common";
with "aunit";
with "opentoken";
project OpenToken_Test is

   for Source_Dirs use
     (
      ".",
      "../../Examples/ASU_Example_3_6",
      "../../Examples/ASU_Example_4_46",
      "../../Examples/ASU_Example_5_10",
      "../../Examples/Language_Lexer_Examples",
      "../../Test",
      "../../wisi/test"
     );

   for Object_Dir use "obj";
   for Exec_Dir use ".";

   package Compiler is
      -- AUnit requires -fno-strict-aliasing
      for Default_Switches ("Ada") use
        OpenToken.Compiler'Default_Switches ("Ada") & ("-fno-strict-aliasing");

      -- wisi-generated code has long lines, so relax limit
      for Switches ("empty_production_*.ad?") use
        OpenToken.Compiler'Default_Switches ("Ada") & ("-gnatyM999");

      for Switches ("multi_conflict.adb") use
        OpenToken.Compiler'Default_Switches ("Ada") & ("-gnatyM999");

      for Switches ("ada_grammar.adb") use
        OpenToken.Compiler'Default_Switches ("Ada") & ("-gnatyM999", "-fno-var-tracking-assignments");

      -- Aflex generated code does not follow any style rules
      for Switches ("ada_grammar_dfa.adb") use
        Common.Compiler.Debug_Switches &
        Common.Compiler'Default_Switches ("Ada");
      for Switches ("ada_grammar_dfa.ads") use
        Common.Compiler.Debug_Switches &
        Common.Compiler'Default_Switches ("Ada");
      for Switches ("ada_grammar_io.adb") use
        Common.Compiler.Debug_Switches &
        Common.Compiler'Default_Switches ("Ada") & "-gnatwK";
      for Switches ("ada_grammar_io.ads") use
        Common.Compiler.Debug_Switches &
        Common.Compiler'Default_Switches ("Ada");
      for Switches ("yylex.adb") use
        Common.Compiler.Debug_Switches &
        Common.Compiler'Default_Switches ("Ada") & "-gnatwA";
   end Compiler;

   package Builder is
      for Default_Switches ("Ada") use Common.Builder'Default_Switches ("Ada");

      --  We use ".exe" extension even on non-Windows, to simplify the makefiles.
      for Executable_Suffix use ".exe";
   end Builder;

   package Binder is
      for Default_Switches ("Ada") use Common.Binder'Default_Switches ("Ada");
   end Binder;

end OpenToken_Test;
