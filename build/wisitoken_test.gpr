--  For running WisiToken tests.

with "aunit";
with "aunit_sal_ext";
with "sal_devel";
with "wisitoken";
with "standard_common";
project WisiToken_Test is

   for Source_Dirs use
     (
      ".",
      "../Test",
      "../wisi/test"
     );

   for Languages use ("Ada", "C");

   case Standard_Common.Profile is
   when "On" =>
      for Object_Dir use "obj_pro";
      for Exec_Dir use "exec_pro";

   when "Off" =>
      for Object_Dir use "obj";
      for Exec_Dir use ".";
   end case;

   package Compiler is
      -- AUnit requires -fno-strict-aliasing
      for Default_Switches ("Ada") use
        WisiToken.Compiler'Default_Switches ("Ada") & ("-fno-strict-aliasing");

      -- For compiling generated Quex code, we have to relax from
      -- Standard_Common.Compiler.*_Switches_C
      Quex_Common_Switches :=
        ("-I" & external ("QUEX_PATH"),
         "-DQUEX_OPTION_TOKEN_STAMPING_WITH_LINE_AND_COLUMN",
         "-DQUEX_OPTION_COUNTER_LINE",
         "-DQUEX_OPTION_COUNTER_COLUMN",
         "-DQUEX_SETTING_BUFFER_MIN_FALLBACK_N=0", -- avoid a buffer size check; we don't do pushback.
         "-Wall", "-Werror", "-g", "-funwind-tables");

      Quex_Debug_Switches :=
        ("-O0"
        -- , "-DQUEX_OPTION_DEBUG_SHOW" -- show quex debug messages, on stderr
        );
      Quex_Release_Switches := ("-O2", "-DQUEX_OPTION_ASSERTS_DISABLED");

      case Standard_Common.Build is
      when "Debug" =>
         for Default_Switches ("C") use Quex_Debug_Switches & Quex_Common_Switches;

      when "Normal" =>
         for Default_Switches ("C") use Quex_Release_Switches & Quex_Common_Switches;
      end case;

   end Compiler;

   package Builder is
      case Standard_Common.Profile is
      when "On" =>
         for Default_Switches ("Ada") use Standard_Common.Builder'Default_Switches ("Ada") & ("-pg");

      when "Off" =>
         for Default_Switches ("Ada") use Standard_Common.Builder'Default_Switches ("Ada");
      end case;

      --  We use ".exe" extension even on non-Windows, to simplify the makefiles.
      for Executable_Suffix use ".exe";
   end Builder;

   package Linker is
      case Standard_Common.Profile is
      when "On" =>
         for Linker_Options use ("-pg", "-lgmem");

      when "Off" =>
         null;
      end case;
   end Linker;

   package Binder is
      for Default_Switches ("Ada") use Standard_Common.Binder'Default_Switches ("Ada");
   end Binder;

end WisiToken_Test;
