--  For running WisiToken tests.

with "aunit";
with "aunit_sal_ext";
with "sal_devel";
with "wisitoken";
with "standard_common";
project WisiToken_Test is

   for Source_Dirs use
     (
      ".",
      "../Test",
      "../wisi/test"
     );

   for Languages use ("Ada", "C");

   case Standard_Common.Profile is
   when "On" =>
      for Object_Dir use "obj_pro";
      for Exec_Dir use "exec_pro";

   when "Off" =>
      for Object_Dir use "obj";
      for Exec_Dir use ".";
   end case;

   package Compiler is
      -- AUnit requires -fno-strict-aliasing
      for Default_Switches ("Ada") use
        WisiToken.Compiler'Default_Switches ("Ada") & ("-fno-strict-aliasing");

      for Default_Switches ("C") use -- for compiling generated Quex code
        ("-I" & external ("QUEX_PATH"),
         "-DQUEX_OPTION_TOKEN_STAMPING_WITH_LINE_AND_COLUMN",
         "-DQUEX_OPTION_COUNTER_LINE",
         "-DQUEX_OPTION_COUNTER_COLUMN");
   end Compiler;

   package Builder is
      case Standard_Common.Profile is
      when "On" =>
         for Default_Switches ("Ada") use Standard_Common.Builder'Default_Switches ("Ada") & ("-pg");

      when "Off" =>
         for Default_Switches ("Ada") use Standard_Common.Builder'Default_Switches ("Ada");
      end case;

      --  We use ".exe" extension even on non-Windows, to simplify the makefiles.
      for Executable_Suffix use ".exe";
   end Builder;

   package Linker is
      case Standard_Common.Profile is
      when "On" =>
         for Default_Switches ("Ada") use ("-pg");

      when "Off" =>
         null;
      end case;
   end Linker;

   package Binder is
      for Default_Switches ("Ada") use Standard_Common.Binder'Default_Switches ("Ada");
   end Binder;

end WisiToken_Test;
