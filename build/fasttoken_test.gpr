--  For running FastToken tests.

with "aunit";
with "aunit_sal_ext";
with "fasttoken";
with "standard_common";
project FastToken_Test is

   for Source_Dirs use
     (
      ".",
      "../Examples/ASU_Example_3_6",
      "../Examples/ASU_Example_4_46",
      "../Examples/ASU_Example_5_10",
      "../Test",
      "../time",
      "../wisi/test"
     );

   for Object_Dir use "obj";
   for Exec_Dir use ".";

   package Compiler is
      -- AUnit requires -fno-strict-aliasing
      for Default_Switches ("Ada") use
        FastToken.Compiler'Default_Switches ("Ada") & ("-fno-strict-aliasing");

   end Compiler;

   package Builder is
      for Default_Switches ("Ada") use Standard_Common.Builder'Default_Switches ("Ada");

      --  We use ".exe" extension even on non-Windows, to simplify the makefiles.
      for Executable_Suffix use ".exe";
   end Builder;

   package Binder is
      for Default_Switches ("Ada") use Standard_Common.Binder'Default_Switches ("Ada");
   end Binder;

end FastToken_Test;
