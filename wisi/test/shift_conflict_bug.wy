;;; This grammar formerly encountered a bug in OpenToken LALR grammar
;;; generator; now it generates a nice error message.
;;;
;;; see shift_conflict.wy for the proper resolution.

%{
(require 'wisi)
%}

%keyword BEGIN "begin"
%keyword IS "is"

%token <punctuation> SEMICOLON ";"

%start declarations

%%

;; this production is redundant; 'declarations <= entry_body' is
;; covered by 'declarations <= declarations entry_body' with empty
;; declarations.
declarations
  : entry_body
  | ;; empty declaration list
  | declarations entry_body
  ;

entry_body
  : IS declarations BEGIN SEMICOLON
  ;

