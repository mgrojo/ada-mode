%token <punctuation> MINUS "-"
%token <number> NUMERIC_LITERAL %[ [0-9]+ ]%

%non_grammar <non-reporting> WHITESPACE %[ [ \t] ]%
;; no newline, comment.
;; no mckenzie

%no_language_runtime

%start expr
%generator_algorithm Packrat
%output_language Ada
%lexer re2c

expr : expr MINUS NUMERIC_LITERAL | NUMERIC_LITERAL ;

