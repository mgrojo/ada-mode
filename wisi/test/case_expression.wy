%non_grammar <non-reporting> WHITESPACE %[ [ \t\n] ]%
%non_grammar <non-reporting> COMMENT %[ "--"[^\n]*[\n] ]%

;; terminals
%token <punctuation> DOT_DOT ".."
%token <punctuation> EQUAL_GREATER "=>"
%token <punctuation> TICK "'"

%elisp_regexp wisi-number-p %[ ([0-9][0-9.]*) ]%

%token <number> NUMBER_LITERAL wisi-number-p
%token <symbol> IDENTIFIER %[ [a-zA-Z][0-9a-zA-Z_]* ]%

%keyword RANGE "range"
%keyword WHEN "when"

%start case_expression

;; match elisp grammar compiler, parser
%first_state_index 0
%first_parser_label 0

%generator_algorithm LALR_LR1
%output_language Ada
%lexer re2c

case_expression
  : WHEN discrete_choice EQUAL_GREATER factor
  ;

choice_expression
  : choice_relation
  ;

choice_relation
  : factor_list
  ;

discrete_choice
  : choice_expression
  | range_nt
  ;

factor
  : IDENTIFIER
  | NUMBER_LITERAL
  ;

factor_list
  : factor
  ;

;; for Ada code generation, can't use case to distinguish token names
range_nt
  : IDENTIFIER TICK RANGE ;; range_attribute_reference
  | factor_list DOT_DOT factor_list
  ;
