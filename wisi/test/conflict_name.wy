with WisiToken.Token_Region;
%%
   State : aliased WisiToken.Token_Region.State_Type (Trace'Access);

%}
%keyword LEFT_PAREN "("
%keyword RIGHT_PAREN ")"

%token <punctuation> TICK "'"

%token <symbol> IDENTIFIER [a-zA-Z][0-9a-zA-Z_]*

%non_grammar <non-reporting> WHITESPACE [ \t\n]

%start name
%first_state_index 1
%first_parser_label 1
%parser_algorithm LALR_LR1
%output_language Ada
%lexer re2c

%conflict SHIFT/REDUCE in state attribute_reference, attribute_designator on token TICK

%%


aggregate
  : LEFT_PAREN name RIGHT_PAREN
  ;


attribute_reference : name TICK attribute_designator ;

attribute_designator
  : name
  ;


name
  : IDENTIFIER
  | attribute_reference
  | qualified_expression
  ;

qualified_expression
  : name TICK aggregate
  ;

%%
