%keyword FUNCTION "function"
%keyword LEFT_PAREN "("
%keyword PROCEDURE "procedure"
%keyword RIGHT_PAREN ")"

%token <symbol> SYMBOL

;; 'fasttoken_accept', Wisi_EOI added in wisi-generate
%start compilation_unit

%%

compilation_unit
  : declarations
    (setq wisi-test-success t)
  ;

declarations
  : declaration
  | declarations declaration
  ;

declaration
  : subprogram
  ;

subprogram
  : FUNCTION parameter_list SYMBOL
    (wisi-statement-action [1 function 2 other]) ;; overwrites open-paren, but not close-paren
  | PROCEDURE parameter_list SYMBOL
    (wisi-statement-action [1 procedure 2 other]) ;; ignored if parameter_list is empty
  ;

;; not on one line, empty production with comment
parameter_list
  : LEFT_PAREN RIGHT_PAREN ;; c-like no parameters
    (wisi-statement-action [1 open-paren 2 close-paren])
  | ;; ada-like no parameters
  | LEFT_PAREN SYMBOL RIGHT_PAREN
    (wisi-statement-action [1 open-paren 3 close-paren])
  ;

%%

