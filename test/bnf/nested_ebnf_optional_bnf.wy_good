%keyword THEN "then"
%keyword ELSIF "elsif"
%keyword ELSE "else"
%keyword END "end"
%keyword IF "if"
%keyword GOTO "goto"
%token <punctuation> SEMICOLON ";"
%keyword TRUE "True"
%meta_syntax BNF
%case_insensitive

%generate LALR Ada re2c
%no_language_runtime

%start if_statement

%non_grammar <non-reporting> WHITESPACE %[ [ \t] ]%
%non_grammar <new-line> NEW_LINE %[ [\n] ]%

if_statement
  : IF expression THEN statement nonterminal_015 END IF SEMICOLON
  | IF expression THEN statement END IF SEMICOLON
  ;
statement
  : GOTO SEMICOLON
  ;

expression
  : TRUE
  ;
nonterminal_015
  : ELSIF statement nonterminal_018
  | ELSIF statement
  ;
nonterminal_018
  : ELSIF statement nonterminal_019
  | ELSIF statement
  ;
nonterminal_019
  : ELSE statement
  ;
