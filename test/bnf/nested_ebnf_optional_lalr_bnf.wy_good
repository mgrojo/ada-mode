%meta_syntax BNF
%keyword OUT "out"
%keyword IN "in"
%keyword TRUE "True"
%keyword GOTO "goto"
%keyword END "end"
%keyword ELSE "else"
%keyword ELSIF "elsif"
%keyword THEN "then"
%keyword IF "if"
%case_insensitive

%generate LALR Ada re2c
%generate Packrat_proc Ada re2c
%no_language_runtime

%start if_statement

%non_grammar <non-reporting> WHITESPACE %[ [ \t] ]%
%non_grammar <new-line> NEW_LINE %[ [\n] ]%

%token <punctuation> SEMICOLON ";"

if_statement
  : IF expression THEN statement ELSIF statement ELSIF statement ELSE statement END IF SEMICOLON
  | IF expression THEN statement ELSIF statement ELSIF statement END IF SEMICOLON
  | IF expression THEN statement ELSIF statement END IF SEMICOLON
  | IF expression THEN statement END IF SEMICOLON
  ;

statement
  : GOTO SEMICOLON
  ;

expression
  : TRUE
  | mode;; just include it in the grammar somewhere.
  ;

;; User must ensure that the empty RHS is last, for packrat.
mode
  : IN OUT
  | OUT
  | IN
  | ;; empty
  ;

